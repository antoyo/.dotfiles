# Bépo bindings.
unbind-key e

bind-key e next-unread
bind-key i prev-unread

unbind-key s
unbind-key t
bind-key t next
bind-key s prev

unbind-key ^T
unbind-key ^S
bind-key ^T next-unread-feed
bind-key ^S prev-unread-feed

unbind-key S
unbind-key T
bind-key T next-feed
bind-key S prev-feed

unbind-key o
unbind-key O
bind-key o open-in-browser-and-mark-read
bind-key O open-in-browser

bind-key è set-tag
bind-key ^È clear-tag

unbind-key b
bind-key b bookmark

unbind-key d
unbind-key u
bind-key d delete-article
bind-key u purge-deleted

bind-key t down
bind-key s up

# Settings.
auto-reload yes
browser "setsid titanium %u >> /dev/null 2>&1 &"
max-items 100
reload-threads 10

# Colors fix.
color info white black
color article white black
color listnormal white black
color background white black
